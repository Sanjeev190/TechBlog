          <div class="blog-grid">
  <div class="row card-header text-dark">
    <div class="col-12 d-flex justify-content-center ">
      <h3 class="blog-title">These are my blogs</h3>
    </div>
    <div class="col-12 d-flex justify-content-end align-items-center">
      <!-- Input for new comment -->
      <button class="btn btn-primary" id="newCommentBtn">Add Comment</button> <!-- Button -->
    </div>
  </div>
</div>

 
               
            <div class="blog-grid">
  <div class="blog-card card shadow-sm mb-4">
    <!-- Top section with title, username, and created at -->
    <div class="card-header bg-secondary text-white">
      <div class="d-flex justify-content-between">
        <h3 class="blog-title mb-0">{{this.blogPlain.title}}</h3>
        <p class="blog-author mb-0">By: {{this.blogPlain.user.username}} in {{this.blogPlain.createdAtFormatted}}</p>
      </div>
    </div>
    
    <!-- Bottom section with content -->
    <div class="card-body bg-white text-dark">
      <p class="blog-text">{{this.blogPlain.content}}</p>
    </div>
  </div>
</div>
<div class="hidden" style="display:none" id="blogId">{{this.blogPlain.id}}</div>

